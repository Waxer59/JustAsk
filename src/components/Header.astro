---
import { cn } from '@lib/utils'
import { buttonVariants } from '@ui/button'
import DotPattern from '@ui/magicui/dot-pattern'
---

<header
  class="relative flex h-[500px] w-full flex-col items-center justify-center overflow-hidden rounded-lg bg-background mt-16">
  <div class="flex items-center flex-col gap-8 z-10">
    <h1 class="text-center text-6xl font-bold text-black dark:text-white">
      Just Ask
    </h1>
    <p class="text-xl max-w-md text-center text-pretty">
      <span class="bg-zinc-950 text-black dark:text-white p-1">
        Simula entrevistas realistas y prepárate para destacar
      </span>
    </p>
    <a class={buttonVariants({ variant: 'default' })} href="/job">
      ¡Empieza ahora!
    </a>
  </div>
  <DotPattern
    className={cn(
      '[mask-image:radial-gradient(300px_circle_at_center,white,transparent)]'
    )}
  />
</header>
