---
import { getLangFromUrl, useTranslations } from '@/i18n/utils'
import { getRelativeLocaleUrl } from 'astro:i18n'
import { cn } from '@lib/utils'
import { buttonVariants } from '@ui/button'
import DotPattern from '@ui/magicui/dot-pattern'
import { LanguagePicker } from './react/LanguagePicker'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<div class="flex flex-col items-end mt-16">
  <LanguagePicker client:only="react" />

  <header
    class="relative h-[500px] w-full flex flex-col items-center justify-center overflow-hidden rounded-lg bg-background">
    <div class="flex items-center flex-col gap-8 z-10">
      <h1 class="text-center text-6xl font-bold text-black dark:text-white">
        Just Ask
      </h1>
      <p class="text-xl max-w-md text-center text-pretty">
        <span class="bg-zinc-950 text-black dark:text-white p-1">
          {t('header.description')}
        </span>
      </p>
      <a
        class={buttonVariants({ variant: 'default' })}
        href={getRelativeLocaleUrl(lang, 'job')}>
        {t('callToAction1')}
      </a>
    </div>
    <DotPattern
      className={cn(
        '[mask-image:radial-gradient(300px_circle_at_center,white,transparent)]'
      )}
    />
  </header>
</div>
