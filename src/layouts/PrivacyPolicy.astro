---
import { getLangFromUrl } from '@/i18n/utils'
import BaseLayout from './BaseLayout.astro'
import Footer from '@/components/Footer.astro'
import { PRIVACY_POLICY_VERSION } from '@/constants'

interface Props {
  title: string
}

const TITLES = {
  es: 'Just Ask | Pol√≠tica de Privacidad',
  en: 'Just Ask | Privacy Policy'
}

const lang = getLangFromUrl(Astro.url)

const { title } = Astro.props
---

<BaseLayout title={TITLES[lang]}>
  <h1 class="text-5xl font-semibold mt-10 mb-5 text-center">
    {title + ` V${PRIVACY_POLICY_VERSION}`}
  </h1>
  <slot />
  <Footer />
</BaseLayout>

<style is:global>
  ul {
    list-style-type: disc;
    margin-left: 2rem;
  }

  ul li {
    margin-bottom: 0.5rem;
  }

  ol {
    list-style-type: decimal;
    margin-left: 2rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  ol li {
    margin-bottom: 0.5rem;
  }

  h2 {
    font-size: 1.5rem;
    line-height: 2rem;
    margin-bottom: 1.5rem;
    margin-top: 2rem;
  }

  h3 {
    font-size: 1.25rem;
    line-height: 1.75rem;
    margin-bottom: 1rem;
    margin-top: 2rem;
    font-weight: 600;
  }

  p {
    font-size: 1.05rem;
    line-height: 1.75rem;
    margin-bottom: 0.75rem;
    margin-top: 0;
  }

  hr {
    margin-top: 2rem;
    margin-bottom: 2rem;
  }
</style>
